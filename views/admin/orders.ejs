<%- include('../layouts/header.ejs') %>
<%- include('../layouts/navbar.ejs') %>
<%- include('../layouts/sidebar.ejs') %>

<main id="main" class="main">
    <div class="col-lg-12">
        <h4 class="card-title">Orders</h4>
        <p>Home | Orders</p>
        <div class="card">
            <div class="card-header">
                
            </div>
            <div class="card-body">
                <div class="table-responsive" >
                    <table class="table table-hover table-responsive-sm" id="reloadDiv">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Order ID</th>
                                <th>Price</th>
                                <th>Order Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orderData.forEach((x,index)=>{ %>
                                <tr>
                                    <td scope="row"><%= index+1 %></td>
                                    <td><%= x.orderId%></td>
                                    <td><%= x.total %></td>
                                    <td><%= x.date.toLocaleString({ day: '2-digit', month: '2-digit', year: '2-digit' }) %></td>
                                    <td><%= x.status %></td>
                                    <% if(x.status == 'Delivered'|| x.status == 'Cancelled' || x.status == 'Returned' || x.status == 'Request Rejected'|| x.status == 'Processing'){%>
                                        <td><%= x.status%></td>
                                        <%}else if(x.status == 'Confirmed'){%>
                                                <td>
                                                  <div class="dropdown">
                                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                      <i>
                                                        <%= x.status %>
                                                      </i>
                                                    </button>
                                                    <div class="dropdown-menu">
                                                      <a class="dropdown-item" href="#" onclick="updateStatus('<%= x._id %>', 'Shipped')">
                                                        <i class="me-1"></i> Ship
                                                      </a>
                                                      <a class="dropdown-item" href="#" onclick="updateStatus('<%= x._id %>', 'Delivered')">
                                                        <i class="me-1"></i> Deliver
                                                      </a>
                                                    </div>
                                                  </div>
                                                </td>
                                          <%}else if (x.status == 'Shipped'){%>
                                            <td>
                                                <div class="dropdown">
                                                  <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                    <i>
                                                      <%= x.status %>
                                                    </i>
                                                  </button>
                                                  <div class="dropdown-menu">
                                                    <a class="dropdown-item" href="#" onclick="updateStatus('<%= x._id %>', 'Delivered')">
                                                      <i class="me-1"></i> Deliver
                                                    </a>
                                                  </div>
                                                </div>
                                              </td>
                                          <%}else if (x.status == 'Return Requested'){%>
                                            <td>
                                              <div class="dropdown">
                                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                  <i>
                                                    <%= x.status %>
                                                  </i>
                                                </button>
                                                <div class="dropdown-menu">
                                                  <a class="dropdown-item" href="#" onclick="updateStatus('<%= x._id %>', 'Returned')">
                                                    <i class="me-1"></i> Approve
                                                  </a>
                                                  <a class="dropdown-item" href="#" onclick="updateStatus('<%= x._id %>', 'Request Rejected')">
                                                    <i class="me-1"></i> Reject
                                                  </a>
                                                </div>
                                              </div>
                                            </td>
                                            <%}%>
                                    <td>
                                        <a class="" href="/admin/orderdetails/<%=x._id %>"><i class="fa-solid fa-eye" ></i></a>
                                    </td>
                                </tr>
                              <%})%> 
                        </tbody>  
                    </table> 
                </div>
            </div>
        </div>
</main>
<script>
    function updateStatus(ordId,status){
        console.log(ordId)
        console.log(status);
      $.ajax({
        url:'/admin/updateStatus',
        data:{
          orderId:ordId,
          newStatus:status
        },
        method:'post',
        success: (response) => {
         if (response.success) {
            $('#reloadDiv').load('/admin/order #reloadDiv')
            console.log(response);
            }
        }
    })
}
</script>
<%- include('../layouts/footer.ejs') %>