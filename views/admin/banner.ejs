<%- include('../layouts/header.ejs') %>
<%- include('../layouts/navbar.ejs') %>
<%- include('../layouts/sidebar.ejs') %>

<main id="main" class="main">
    <div class="col-lg-12">
        <h4 class="card-title">Banner</h4>
        <p>Home | Banner</p>
        <div class="card">
            <div class="card-header">
                <button type="button" class="btn btn-primary"><a class="text-decoration-none text-white" href="/admin/addbanner">Add Banner</a></button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-responsive-sm">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Banner</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% bannerdata.forEach((x,index)=>{ %>
                                <tr>
                                    <td scope="row"><%= index+1 %></td>
                                    <td><%= x.banner %></td>
                                    <td><img style="width: 50px;height: 50px;" src="/productimages/<%= x.image %>" alt=""></td>
                            <td>
                                <a class="" href="/admin/editbanner/<%= x._id %>"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a class="" href="" onclick="event.preventDefault(); deleteBanner('<%=x._id %>')"><i class="fa-solid fa-trash" style="color: red;"></i></a>
                            </td>
                                </tr>
                            <%})%>
                        </tbody> 
                    </table>
                </div>
            </div>
        </div>
</main>
<script>
    function deleteBanner(bannerId) {
      Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = "/admin/banner/" + bannerId;
        }
      })
    }
</script>
