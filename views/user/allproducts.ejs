<%- include('../layouts/user/header.ejs') %>
<%- include('../layouts/user/navbar.ejs') %>

<!--================Home Banner Area =================-->
<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
      <div class="container">
        <div class="banner_content d-md-flex justify-content-between align-items-center">
          <div class="mb-3 mb-md-0">
            <h2>Shop </h2>
            <p>Very us move be blessed multiply night</p>
          </div>
          <div class="page_link">
            <a href="/">Home</a>
            <a href="/allproducts">Shop</a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--================End Home Banner Area =================-->

  <!--================Category Product Area =================-->
  <section class="cat_product_area section_gap">
    <div class="container">
      <div class="row flex-row-reverse">
        <div class="col-lg-9">
          <!-- <div class="product_top_bar">
            <div class="left_dorp">
              <select class="sorting">
                <option value="1">Default sorting</option>
                <option value="2">Default sorting 01</option>
                <option value="4">Default sorting 02</option>
              </select>
              <select class="show">
                <option value="1">Show 12</option>
                <option value="2">Show 14</option>
                <option value="4">Show 16</option>
              </select>
            </div>
          </div> -->
        
          <div class="latest_product_inner">
            <div class="row">
              <% productData.forEach((x,index)=>{ %>              
              <div class="col-lg-4 col-md-6">
                <div class="single-product">
                  <div class="product-img">
                    <img
                      class="card-img"
                      src="/productimages/<%= x.image[0] %>"
                      alt=""
                    />
                    <div class="p_icon">
                      <a href="/productdetails/<%= x._id %>">
                        <i class="ti-eye"></i>
                      </a>
                      <% if(typeof userData!=="undefined"){%>   
                      <a onclick="addToWishlist('<%= x._id %>')">
                        <i class="ti-heart"></i>
                      </a>
                      <a  onclick="addToCart('<%= x._id %>','<%= x.offerprice %>')">
                        <i class="ti-shopping-cart"></i>
                      </a>
                      <% }else{ %>
                        <a href="/login">
                          <i class="ti-heart"></i>
                        </a>
                        <a href="/login">
                          <i class="ti-shopping-cart"></i>
                        </a>
                    <% } %>
                    </div>
                  </div>
                  <div class="product-btm">
                    <a href="#" class="d-block">
                      <h4><%= x.name %></h4>
                    </a>
                    <div class="mt-3">
                      <span class="mr-4">₹<%= x.offerprice %></span>
                      <del>₹<%= x.price %></del>
                    </div>
                  </div>
                </div>
              </div>
              <%}) %>
            </div>
          </div>
        </div>

        <div class="col-lg-3">
          <div class="left_sidebar_area">
            <aside class="left_widgets p_filter_widgets">
              <div class="l_w_title">
                <h3>Browse Categories</h3>
              </div>
              <div class="widgets_inner">
                <ul class="list">
                  <% categoryData.forEach((x,index)=>{ %>
                  <li>
                    <a href="/category/<%= x._id %>"><%= x.category %></a>
                  </li>
                  <%}) %>
                </ul>
              </div>
            </aside>

            <aside class="left_widgets p_filter_widgets">
              <div class="l_w_title">
                <h3>Browse Brands</h3>
              </div>
              <div class="widgets_inner">
                <ul class="list">
                  <% brandData.forEach((x,index)=>{ %>
                  <li >
                    <a href="/brands/<%= x._id %>"><%= x.brand %></a>
                  </li>
                  <%}) %>
                </ul>
              </div>
            </aside>
          </div>
        </div>
      </div>
      <div class="card-body">
        <% if(typeof productCount == "undefined"){%>
          <%}else{%>

        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center">
      
            <!-- Previous page button -->
            <li class="page-item">
              <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
              </a>
            </li>
      
            <!-- Page numbers -->
            <% for(let i=1;i<=productCount ;i++){ %>
            <li class="page-item"><a class="page-link" href="?page=<%=i %>"><%= i %></a></li>
            <% } %>
      
            <!-- Next page button -->
            <li class="page-item">
              <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
              </a>
            </li>
          </ul>
        </nav>
        <%}%>
      </div>
      
    </div>
    <script>
      function addToWishlist(proId){
        $.ajax({
          url:'/addtowishlist',
          data:{
            productId:proId
          },
          method:"post",
          success:(response)=>{
            console.log(response);
            Swal.fire({
            icon: 'success',
            title: 'Added to Wishlist!',
            text: 'Product added to the Wishlist.',
            confirmButtonText: 'OK'
          });
          }
        })
      }
    </script>


<script>
  function addToCart(proId,proPrice){
    $.ajax({
      url:'/addtocart',
      data:{
        productId:proId,
        price:proPrice
      },
      method:"post",
      success:(response)=>{
        console.log(response);
        Swal.fire({
        icon: 'success',
        title: 'Added to cart!',
        text: 'Product added to the cart.',
        confirmButtonText: 'OK'
      });
      }
    })
  }
</script>
  </section>
  <!--================End Category Product Area =================-->


<%- include('../layouts/user/footer.ejs') %>