  <section class="feature_product_area section_gap_bottom_custom">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12">
          <div class="main_title">
            <h2><span>Featured products</span></h2>
            <p>Featuring The New Products</p>
          </div>
        </div>
      </div>

      <div class="row">
        <% productData.slice(0,3).forEach((x,index)=>{ %>
        <div class="col-lg-4 col-md-6">
          <div class="single-product">
            <div class="product-img">
              <img width="200px"  height="200px" class="img-fluid w-100" src="/productimages/<%= x.image[0] %> " alt="" />
              
              <div class="p_icon">
                <a  href="/productdetails/<%= x._id %>">
                  <i class="ti-eye"></i>
                </a>
                <% if(typeof userData!=="undefined"){%>   
                  <a  onclick="addToWishlist('<%= x._id %>')">
                    <i class="ti-heart"></i>
                  </a>
                  <a onclick="addToCart('<%= x._id %>','<%= x.offerprice %>')">
                    <i class="ti-shopping-cart"></i>
                  </a>
                <% }else{ %>
                  <a href="/login">
                    <i class="ti-heart"></i>
                  </a>
                  <a href="/login">
                    <i class="ti-shopping-cart"></i>
                  </a>
              <% } %>
              </div>
            </div>
            <div class="product-btm d-block">
                <%= x.name %>
               <div class="mt-3">
                <span class="mr-4">₹<%= x.offerprice %></span>
                <del>₹<%= x.price %></del>
              </div> 
            </div>
          </div>
        </div>
        <%}) %>
      </div>
    </div>
    
    <script>
      function addToWishlist(proId){
        $.ajax({
          url:'/addtowishlist',
          data:{
            productId:proId
          },
          method:"post",
          success:(response)=>{
            console.log(response);
            Swal.fire({
            icon: 'success',
            title: 'Added to Wishlist!',
            text: 'Product added to the Wishlist.',
            confirmButtonText: 'OK'
         });
          }
        })
      }
    </script>

<script>
  function addToCart(proId,proPrice){
    
    $.ajax({
      url:'/addtocart',
      data:{
        productId:proId,
        price:proPrice
      },
      method:"post",
      success:(response)=>{
        console.log(response);
        Swal.fire({
        icon: 'success',
        title: 'Added to cart!',
        text: 'Product added to the cart.',
        confirmButtonText: 'OK'
       });
      }
    })
  }
</script>
